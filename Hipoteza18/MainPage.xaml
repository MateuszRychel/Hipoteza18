<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hipoteza18.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Entry x:Name="wyraz1" Placeholder="Wyraz 1" />

            <Entry x:Name="wyraz2" Placeholder="Wyraz 2" />
            
            <Button
                x:Name="Btn"
                Text="Sprawdź" 
                Clicked="Alg"
                HorizontalOptions="Fill" />

            <Label
                x:Name="wynik"
                Text="Czy wyrazy są anagramami?" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
